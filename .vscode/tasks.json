{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "dependsOrder": "parallel",
            "dependsOn": [
                "TypeScript: Watch",
                "SCSS: Watch",
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "docker",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^(ERROR|WARNING):\\s*(.+)$",
                        "severity": 1,
                        "message": 2
                    }
                },
                {
                    "owner": "shell",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^ERROR:\\s*(.+)$",
                        "severity": 1,
                        "message": 1
                    }
                }
            ]
        },
        {
            "label": "TypeScript: Watch",
            "type": "shell",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "args": ["run", "watch:ts"],
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "SCSS: Watch",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch:scss"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "owner": "scss",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(Error|Warning):\\s+(.+)$",
                    "severity": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Sass is watching for changes\\. Press Ctrl-C to stop\\.\\s*$",
                    "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}\\s*(?:AM|PM)?\\s*-\\s*Compiled\\s+(.+)\\s+to\\s+(.+)\\s*$"
                }
            }
        }
    ]
}