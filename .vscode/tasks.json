{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "dependsOrder": "parallel",
            "dependsOn": [
                "TypeScript: Watch",
                "SCSS: Watch",
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "TypeScript: Watch",
            "type": "shell",
            "command": "npx",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "args": ["tsc", "--watch"],
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "SCSS: Watch",
            "type": "shell",
            "command": "npx",
            "args": [
                "sass",
                "--watch",
                "css:css",
                "--no-source-map",
                "-s",
                "compressed"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "group": "build"
        }
    ]
}