# Toolbox.io Environment Configuration
# Copy this file to .env and fill in your actual values
# Works for both development (SQLite) and production (MySQL)

# ===========================================
# Environment & Debug
# ===========================================
# Set to 'development' for local dev (uses SQLite), 'production' for Docker (uses MySQL)
ENV=development
DEBUG=true

# ===========================================
# Database Configuration
# ===========================================
# Development: SQLite database (password ignored)
# Production: MySQL database (password required)
DB_PASSWORD=your_secure_database_password_here
DB_NAME=toolbox_db
DB_USER=toolbox_user
DB_HOST=localhost
DB_PORT=3306

# ===========================================
# Security & Authentication
# ===========================================
SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters

# ===========================================
# Email Configuration (Optional)
# ===========================================
# Leave empty to disable email features
SMTP_PASSWORD=your_smtp_password_here

# ===========================================
# External API Keys (Optional)
# ===========================================
# OpenAI API Key (for support chat) - optional
OPENAI_API_KEY=your_openai_api_key_here

# GitHub App Configuration (for issue reporting) - optional
GITHUB_APP_ID=your_github_app_id_here
GITHUB_INSTALLATION_ID=your_github_installation_id_here
GITHUB_PRIVATE_KEY=your_github_private_key_here
GITHUB_API_VERSION=2022-11-28

# ===========================================
# Bot Configuration (Optional)
# ===========================================
# Internal bot token for API authentication
INTERNAL_BOT_TOKEN=your_internal_bot_token_here

# Telegram Bot Token (for Telegram support bot) - optional
# Leave empty to disable support bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# API Configuration
# ===========================================
# Base URL for internal API communication
# Development: http://localhost:8000
# Production: http://main:8000 (Docker service name)
API_BASE_URL=http://localhost:8000
